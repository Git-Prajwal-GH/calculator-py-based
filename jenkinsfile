pipeline {
    agent any

    stages {
        stage("Clone Repo") {
            steps {
                git branch: 'main', url: 'https://github.com/yourname/calculator-app.git'
            }
        }

        stage("Build Docker Image") {
            steps {
                sh "docker build -t calculator-app:latest ."
            }
        }

        stage("Run Container") {
            steps {
                sh "docker run -d -p 5000:5000 --name calc-app calculator-app:latest"
            }
        }
    }
}
