pipeline {
    agent any

    environment {
        IMAGE_NAME = "calculator-app" // Replace with your Docker Hub username and image name
    }

    stages {
        stage("Clone Repo") {
            steps {
                git branch: 'main', url: 'https://github.com/Git-Prajwal-GH/calculator-py-based.git' // Clone the repository
            }
        }

        stage("Build Docker Image") {
            steps {
                sh "docker build -t ${IMAGE_NAME}:latest ." // Specify Dockerfile location
            }
        }

        stage("Push to Docker Hub") {
            steps {
               withCredentials([usernamePassword(credentialsId: "dockerhub_cred",
                usernameVariable: "dockerHubUser",
                passwordVariable: "dockerHubPass")]) {
            sh '''
                docker login -u "$dockerHubUser" -p "$dockerHubPass" //--password-stdin
                docker login -u ${env.dockerHubUser} -p ${env.dockerHubPass}
                docker image tag ${IMAGE_NAME}:latest $dockerHubUser/${IMAGE_NAME}:latest
                docker push $dockerHubUser/${IMAGE_NAME}:latest
            '''
        }
    }
}


        stage("Deploy Container") {
            steps {
                sh "docker run -d -p 5000:5000 --name calc-app ${IMAGE_NAME}:latest"
            }
        }
    } // End of stages
} // End of pipeline
